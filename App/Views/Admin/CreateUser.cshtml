@model App.Models.Identity.UserRegistrationModel
@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .new-form {
        position: absolute;
        top: 50%;
        left: 60%;
        transform: translate(-50%, -50%);
        width: 40%;
        padding: 16px;
        color: rgba(0, 0, 0, 0.870588);
        background: #fff;
        box-shadow: 0 1px 8px 0 rgba(0 60 84), 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 3px 1px -2px rgba(0, 0, 0, 0.12);
        border-radius: 12px;
        /* z-index:-1;*/
    }

    @@media only screen and (max-width: 600px) {
        .new-form {
            position: absolute;
            top: 48%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 92%;
            padding: 16px;
            color: rgba(0, 0, 0, 0.870588);
            background: #fff;
            box-shadow: 0 1px 8px 0 rgba(0 60 84), 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 3px 1px -2px rgba(0, 0, 0, 0.12);
            border-radius: 12px;
            z-index: -1;
        }
    }
</style>
<div class="content-body">
    <div class="container-fluid">
        <div class="new-form mt-2">
            <div>
                <form asp-action="Register" asp-controller="Admin" >
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <label class="mb-1"><strong>First Name</strong></label>
                        <input asp-for="FirstName" type="text" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-1"><strong>Last Name</strong></label>
                        <input asp-for="LastName" type="text" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-1"><strong>Email</strong></label>
                        <input asp-for="Email" type="text" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-1"><strong>Password</strong></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-1"><strong>Confirm Password</strong></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-1"><strong>Role</strong></label>
                        <select asp-for="UserRole" class="form-control">
                            <option value="User">User    </option>
                            <option value="Doctor">Doctor  </option>
                            <option value="Admin">Admin  </option>
                            <option value="Jr">Junior Resident </option>
                            <option value="Sr">Senior Resident </option>
                            <!-- Add more role options here -->
                        </select>
                        <span asp-validation-for="UserRole" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn bg-white  btn-block" style="color: #2767c4;">Create</button>
                    </div>
                </form>

            </div>
        </div>
       
    </div>
</div>

